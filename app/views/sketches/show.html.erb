
<h1><span class="project_title">idea sketch></span> <%= @sketch.title %></h1>

<div id="slider">
<% if @sketch.sketch_images == [] %>
<div><%= image_tag "sketch_index_icon_big.png" %></div>
<% end %>
	<% @sketch.sketch_images.each do |p| %>
		<div><%= image_tag(p.image.url(:large)) %></div>
	<% end -%>
</div> <!--slider-->

<div class="members">
  <h2>members</h2>
	<ul>
		<% @sketch.designers.each do |d| %>
      <li>
      <%= link_to member_path(d), :style => "text-decoration: none; color: black;", :remote => true do %>
        <%= d.name %> <h3 class="name_label">design</h3>
        <span class="email"><%= d.email %></span>
      <% end -%>
      </li>
		<% end -%>
	</ul>
</div>

<div class="details">
	<ul>
		<li><%= @sketch.created_at %></li>
		<li><%= @sketch.description %></li>
	</ul>
</div>
