
<h1><%= @project.title %></h1>

<div id="slider">
	<% @project.project_images.each do |p| %>
		<div><%= image_tag(p.image.url(:width400)) %></div>
	<% end -%>
</div> <!--slider-->

<div class="members">
	<ul>
		<% @project.developers.each do |d| %>
      <li><h3 class="name_label">development</h3> | <%= d.name %></li>
		<% end -%>
		<% @project.designers.each do |d| %>
      <li><h3 class="name_label">design</h3> | <%= d.name %></li>
		<% end -%>
	</ul>
</div>

<div class="details">
	<ul>
		<li><%= @project.created_at %></li>
		<li><%= @project.description %></li>
	</ul>
</div>
