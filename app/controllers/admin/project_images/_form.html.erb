
<%= form_for [:admin, @project_image] do |f| %>
  <div class="table">
    <table class="listing form" cellpadding="0" cellspacing="0">
      <th class="full" colspan="2">Adding a new ProjectImage</th>
      <tr>
        <td><strong>featured</strong></td>
        <td>
          <%= f.check_box :featured%>
        </td>
      </tr>
      <tr>
        <td><strong>project</strong></td>
        <td>
          <%= f.select :project_id, Project.all.map {|project| [project.title, project.id]}%>
        </td>
      </tr>
      <tr>
        <td><strong>image</strong></td>
        <td>
          <%= f.file_field :image%>
        </td>
      </tr>


    </table>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end -%>
